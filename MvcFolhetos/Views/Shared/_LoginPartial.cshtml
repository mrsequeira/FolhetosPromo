@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user"></i>Conta</a>
            <div class="dropdown-menu">
                <a class="dropdown-item"> <i class="fas fa-users-cog"></i> @Html.ActionLink("Definições", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Terminar Sessão</a>

            </div>
        </li>
    }
}
else
{

    <li class="nav-item nav-link"> @Html.ActionLink("Registar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" }) </li>
    <li class="nav-item nav-link"><i class="fas fa-sign-in-alt"></i> @Html.ActionLink("Iniciar sessão", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

}

@model IdentitySample.Models.RegisterViewModel
@{
                /**/

                ViewBag.Title = "Criar uma nova conta";
}
<br />
<div class="container col-md-6 offset-md-3">
    <div class="card card-login">
        <div class="card-header "> <h4>@ViewBag.Title</h4></div>
        <div class="card-body">
            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.Label("Nome próprio", new { @class = "col-md-5 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.NomeProprio, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NomeProprio, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Apelido", new { @class = "col-md-5 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Apelido, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Apelido, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Email", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Senha", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Confirmar Senha", new { @class = "col-md-5 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-success btn-block" value="Registar" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
